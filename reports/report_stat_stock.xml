<odoo>
   <!-- REPORT DEFINTION -->
    <record id="report_action_id" model="ir.actions.report">
        <field name="name">Report Stock Okplast</field>
        <field name="model">wizard.print.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">stock_okplast.report_stat_stock</field>
<!--        <field name="file">your_report.pdf</field>-->
        <field name="print_report_name">'Report_' + object.date_start.strftime('%Y%m%d') + '.pdf'</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>

    </record>

    <!-- REPORT TEMPLATE -->
    <template id="report_stat_stock">
        <t t-call="web.html_container">
             <t t-call="web.external_layout">
                 <div class="text-center" style="margin-top: 20px;">
                <!-- Company Logo -->
<!--                <div style="text-align: center; margin-bottom: 10px;">-->
<!--                    <img t-if="user.company_id.logo" t-att-src="'data:image/png;base64,%s' % user.company_id.logo.decode('utf-8')"-->
<!--                         style="max-width: 150px; max-height: 80px;" alt="Company Logo"/>-->
<!--                </div>-->

                <!-- Report Title -->
               <h5>
                    RAPPORT D'UTILISATION DES PIECES PAR
                    <t t-if="filter_type == 'warehouse'"> USINE</t>
                    <t t-elif="filter_type == 'partner'"> MACHINE</t>
                    <t t-else="">PRODUIT</t> POUR LA PERIODDE ALLANT DU <span t-esc="date_start"/> AU <span t-esc="date_end"/>
                </h5>
            </div>


                <t t-foreach="data.items()" t-as="group">
                     <center><h4 t-esc="group[0].name"/></center>
                     <table class="table table-bordered" style="width: 80%; margin: 0 auto; border-collapse: collapse;">
                        <thead>

                            <tr style="background-color: #f9f9f9;">
                                <th style="padding: 10px; border: 1px solid #ddd;">Product</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Quantity</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Unit Price</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Total</th>
                            </tr>

                        </thead>
                        <tbody>
                            <t t-set="table_total" t-value="0"/>
                            <t t-foreach="group[1].items()" t-as="product">
                               <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;" t-esc="product[0].name"/>
                                    <!-- Format Quantity -->
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;" t-esc="'{:,.0f}'.format(product[1]['qty']).replace(',', ' ')"/>
                                    <!-- Format Unit Price -->
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;" t-esc="'{:,.0f}'.format(product[1]['price']).replace(',', ' ')"/>
                                    <!-- Format Total -->
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;" t-esc="'{:,.0f}'.format(product[1]['total']).replace(',', ' ')"/>
                                </tr>
                                <t t-set="table_total" t-value="table_total + product[1]['total']"/>
                            </t>
                            <tr>
                                <td colspan="3" style="padding: 10px; border: 1px solid #ddd;text-align: right;">TOTAL</td>
                                <td style="padding: 10px; border: 1px solid #ddd;text-align: right;">
                                <strong><span t-esc="'{:,.0f}'.format(table_total).replace(',', ' ')"/></strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
