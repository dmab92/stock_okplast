<odoo>
    <record id="wizard_print_report_view" model="ir.ui.view">
        <field name="name">wizard.print.report.view</field>
        <field name="model">wizard.print.report</field>
        <field name="arch" type="xml">
            <form string="Print Report Wizard">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="filter_type" require="1"/>
                    <field name="machine_ids" widget="many2many_tags" invisible="filter_type != 'partner'" />
                    <field name="usine_ids" widget="many2many_tags"
                           invisible="filter_type != 'warehouse'"
                          />
                    <field name="product_ids" widget="many2many_tags" invisible="filter_type != 'product'"/>

                    <field name="tech_ids" widget="many2many_tags"
                           invisible="filter_type != 'tech'"
                          />
                     <field name="user_ids" widget="many2many_tags"
                           invisible="filter_type != 'user'"
                          />

                    <field name="report_type"/>
                </group>
                <footer>
                    <button name="print_report" string="Print Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <odoo>
    <record id="action_wizard_print_report" model="ir.actions.act_window">
        <field name="name">Print Report</field>
        <field name="res_model">wizard.print.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

</odoo>
